{
  "name": "front-haptictool",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:front-haptictool": "node dist/front-haptictool/server/server.mjs",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:e2e": "ng serve & cypress open",
    "___RESPONSIVE_TESTS___": "Pruebas de diseño responsive",
    "test:responsive": "cypress run --spec \"cypress/e2e/responsive.cy.js\"",

    "___GRAPHICS_TESTS___": "Pruebas de gráficos y visualización",
    "test:flujo-grafico": "cypress run --spec \"cypress/e2e/Flujo_grafico.cy.js\"",

    "___SMOKE_TESTS_INDIVIDUAL___": "Pruebas de humo individuales",
    "test:smoke:admin": "cypress run --spec \"cypress/e2e/smoke-tests/admin.cy.js\"",
    "test:smoke:login": "cypress run --spec \"cypress/e2e/smoke-tests/login.cy.js\"",
    "test:smoke:normal-user": "cypress run --spec \"cypress/e2e/smoke-tests/normal_user.cy.js\"",
    "test:smoke:public-user": "cypress run --spec \"cypress/e2e/smoke-tests/public-user.cy.js\"",
    "test:smoke:register": "cypress run --spec \"cypress/e2e/smoke-tests/register.cy.js\"",
    "test:smoke:super-admin": "cypress run --spec \"cypress/e2e/smoke-tests/super_admin.cy.js\"",

    "___SMOKE_TESTS_GROUPS___": "Grupos de pruebas de humo",
    "test:smoke:all": "cypress run --spec \"cypress/e2e/smoke-tests/*.cy.js\"",

    "___SECURITY_TESTS___": "Pruebas de seguridad y protección de rutas",
    "test:security:routes": "cypress run --spec \"cypress/e2e/security-tests/preteccion_rutas.cy.js\"",
    "test:security:all": "cypress run --spec \"cypress/e2e/security-tests/*.cy.js\"",

    "___FLOW_TESTS_INDIVIDUAL___": "Pruebas de flujo individuales",
    "test:flow:files": "cypress run --spec \"cypress/e2e/flow-tests/gestion_archivos.cy.js\"",
    "test:flow:users": "cypress run --spec \"cypress/e2e/flow-tests/gestion_usuarios.cy.js\"",

    "___FLOW_TESTS_GROUPS___": "Grupos de pruebas de flujo",
    "test:flow:all": "cypress run --spec \"cypress/e2e/flow-tests/*.cy.js\"",

    "___APTITUDE_TESTS___": "Pruebas de aptitud y manejo de errores",
    "test:aptitude:errors": "cypress run --spec \"cypress/e2e/aptitude-tests/manejo_errores.cy.js\"",
    "test:aptitude:all": "cypress run --spec \"cypress/e2e/aptitude-tests/*.cy.js\"",

    "___STRATEGIC_GROUPS___": "Grupos estratégicos de pruebas",
    "test:critical": "npm run test:smoke:all && npm run test:security:all",
    "test:users": "npm run test:smoke:admin && npm run test:smoke:normal-user && npm run test:smoke:public-user && npm run test:smoke:super-admin",
    "test:graphics": "npm run test:flujo-grafico && npm run test:flow:graphics",
    "test:administration": "npm run test:flow:files && npm run test:flow:users && npm run test:smoke:admin",

    "test:validacion-formularios": "cypress run --spec \"cypress/e2e/dinamic-tests/validacion-formularios.cy.js\"",
    
    "___ADVANCED_SCRIPTS___": "Scripts avanzados y reportes",
    "test:all": "cypress run --spec \"cypress/e2e/**/*.cy.js\"",
    "test:report:all": "cypress run --spec \"cypress/e2e/**/*.cy.js\" --reporter mochawesome",
    "test:report:smoke": "cypress run --spec \"cypress/e2e/smoke-tests/*.cy.js\" --reporter mochawesome"
    
  },
  "private": true,
  "dependencies": {
    "@abacritt/angularx-social-login": "^2.0.0",
    "@angular/animations": "^19.1.0",
    "@angular/common": "^19.1.0",
    "@angular/compiler": "^19.1.0",
    "@angular/core": "^19.1.0",
    "@angular/forms": "^19.1.0",
    "@angular/platform-browser": "^19.1.0",
    "@angular/platform-browser-dynamic": "^19.1.0",
    "@angular/platform-server": "^19.1.0",
    "@angular/router": "^19.1.0",
    "@angular/ssr": "^19.1.4",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@primeng/themes": "^20.2.0",
    "chart.js": "^4.5.0",
    "express": "^4.18.2",
    "font-awesome": "^4.7.0",
    "plotly.js-dist": "^3.1.2",
    "plotly.js-dist-min": "^3.1.2",
    "primeicons": "^7.0.0",
    "primeng": "^19.1.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.1.4",
    "@angular/cli": "^19.1.4",
    "@angular/compiler-cli": "^19.1.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "cypress": "^15.5.0",
    "jasmine-core": "~5.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.7.2"
  }
}
